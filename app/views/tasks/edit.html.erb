<h1>タスク編集</h1>

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
        <%= form_with(model: @task, local: true) do |f| %>
            <% if @task.errors.any? %>
                <div id="error_explanation">
                <h2><%= pluralize(@task.errors.count, "error") %> が存在します:</h2>

                <ul>
                <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
                </div>
            <% end %>

            <!-- タスクの属性に合わせたフォームフィールドを追加 -->
            <div class="field">
                <%= f.label :task_title, class: "label-form" %>
                <%= f.text_field :task_title, class: "form-control" %>

                <%= f.label :task_detail, class: "label-form" %>
                <%= f.text_area :task_detail, class: "form-control" %>

                <%= f.label :task_comment, class: "label-form" %>
                <%= f.text_area :task_comment, class: "form-control" %><br>

                <%= f.label :start_time, class: "label-form" %>
                <%= f.datetime_select :start_time, class: "form-control" %><br>

                <%= f.submit "更新", class: "btn btn-primary btn-form" %>

                <%= link_to '戻る', tasks_path, class: "btn btn-sm btn-info btn-form" %>
            </div>
        <% end %>
        </div>
    </div>
</div>