<% provide(:title, "PDCA詳細") %>

<h1>PDCA詳細一覧</h1>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="user-number">
                <%= Date.today.strftime("%Y年%m月%d日") %>に提出された回答
                <%= "ID: #{current_user.id}" %>
                <%= "名前: #{current_user.name}" %>
            </div>
            <table class="table table-bordered">
                <tr>
                    <th class="header">PDCAタイトル</th>
                    <td><%= @report.report_title %></td>
                </tr>
                <tr>
                    <th class="header">PDCA詳細</th>
                    <td><%= @report.report_detail %></td>
                </tr>
                <tr>
                    <th class="header">その他</th>
                    <td><%= @report.report_comment %></td>
                </tr>
                <tr>
                    <th class="header">PDCA日程</th>
                    <td><%= @report.start_time %></td>
                </tr>
            </table>
            <%= link_to '編集', edit_report_path(@report), class: "btn btn-sm btn-primary" %> |
            <%= link_to '削除', @report, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %> |
            <%= link_to '戻る', reports_path, class: "btn btn-sm btn-info" %>
        </div>
    </div>
</div>
