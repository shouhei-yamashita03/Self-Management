<% provide(:title, "PDCA作成") %>

<h1>PDCAの新規作成</h1>

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <%= form_for @report do |f| %>

            <%= f.label :report_title, class: "label-form" %>
            <%= f.text_field :report_title, class: "form-control" %>

            <%= f.label :report_name, class: "label-form" %>
            <%= f.text_field :report_name, class: "form-control" %>

            <%= f.label :report_detail, class: "label-form" %>
            <%= f.text_area :report_detail, class: "form-control" %>

            <%= f.label :report_comment, class: "label-form" %>
            <%= f.text_area :report_comment, class: "form-control" %><br>

            <%= f.label :start_time, class: "label-form" %>
            <%= f.datetime_select :start_time, class: "form-control" %><br>

            <%= f.submit "新規登録", class: "btn btn-primary btn-form" %>

            <%= link_to '戻る', reports_path, class: "btn btn-info btn-form" %>
            <% end %>
        </div>
    </div>
</div>