<h1>ヘルスを編集する</h1>

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
        <%= form_with(model: @health, local: true) do |f| %>
            <% if @health.errors.any? %>
                <div id="error_explanation">
                <h2><%= pluralize(@health.errors.count, "error") %> が存在します:</h2>

                <ul>
                <% @health.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
                </ul>
                </div>
            <% end %>

            <!-- ヘルスの属性に合わせたフォームフィールドを追加 -->
            <div class="field">
                <%= f.label :health_title, class: "label-form" %>
                <%= f.text_field :health_title, class: "form-control" %>

                <%= f.label :health_name, class: "label-form" %>
                <%= f.text_field :health_name, class: "form-control" %>

                <%= f.label :wake_up_time_at, class: "label-form" %>
                <%= f.time_field :wake_up_time_at, class: "form-control" %>

                <%= f.label :bedtime_at, class: "label-form" %>
                <%= f.time_field :bedtime_at, class: "form-control" %>

                <%= f.label :stature, class: "label-form" %>
                <%= f.text_field :stature, class: "form-control" %>

                <%= f.label :body_weight, class: "label-form" %>
                <%= f.text_field :body_weight, class: "form-control" %>

                <%= f.label :health_detail, class: "label-form" %>
                <%= f.text_area :health_detail, class: "form-control" %>

                <%= f.label :health_comment, class: "label-form" %>
                <%= f.text_area :health_comment, class: "form-control" %><br>

                <%= f.label :start_time, class: "label-form" %>
                <%= f.datetime_select :start_time, class: "form-control" %><br>

                <%= f.submit "更新", class: "btn btn-primary btn-form" %>

                <%= link_to '戻る', healths_path, class: "btn btn-sm btn-info btn-form" %>
            </div>
        <% end %>
        </div>
    </div>
</div>